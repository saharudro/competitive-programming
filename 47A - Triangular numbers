#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;  // Input the number n
    
    // Check for triangular numbers from 1 to 500
    for (int i = 1; i <= 500; i++) {
        int t = (i * (i + 1)) / 2;  // Calculate the i-th triangular number

        // If the triangular number equals n, print "YES"
        if (t == n) {
            cout << "YES" << endl;
            return 0;
        }
    }

    // If no triangular number equals n, print "NO"
    cout << "NO" << endl;

    return 0;
}
